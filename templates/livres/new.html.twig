{% extends 'base.html.twig' %}

{% block title %}New Livre{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Create new Livre</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(form.titre, 'Titre') }}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.titre) }}
                    </div>
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.auteur, 'Auteur') }}
                    {{ form_widget(form.auteur, {'attr': {'class': 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.auteur) }}
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_label(form.date, 'Date') }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.date) }}
                    </div>
                </div>
                <div class="form-group col-md-6">
                    {{ form_label(form.resume, 'Résumé') }}
                    {{ form_widget(form.resume, {'attr': {'class': 'form-control'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.resume) }}
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}

        <a href="{{ path('app_livres_index') }}" class="btn btn-secondary mt-3">Back to list</a>
    </div>
{% endblock %}
